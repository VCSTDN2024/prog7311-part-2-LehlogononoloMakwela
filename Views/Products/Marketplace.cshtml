@model IEnumerable<AgriEnergyConnect_ST10290044_Part2.Models.Product>

@{
    ViewData["Title"] = "Green Energy Marketplace";
}
<!-- display image pus product -->
<h1 class="text-center mb-4" style="color: var(--primary-green);">Green Energy Solutions Marketplace</h1>

<div class="row g-4">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded" style="background-color: #f8fff8;">
               
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@Url.Content("~/" + product.ImageUrl)" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover; border-top-left-radius:10px; border-top-right-radius:10px;" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-sm btn-outline-success">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
